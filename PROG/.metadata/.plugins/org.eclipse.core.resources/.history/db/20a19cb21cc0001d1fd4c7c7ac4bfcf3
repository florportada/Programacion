package maniqui;

public class Maniqui {
	String id;
	Camisa camisa;
	Pantalon pantalon;
	Vestido vestido;
	
	public Maniqui(String id, Camisa camisa, Pantalon pantalon, Vestido vestido) {
		super();
		this.id = id;
		this.camisa = camisa;
		this.pantalon = pantalon;
		this.vestido = vestido;
	}

	public Maniqui(String id) {
		super();
		this.id = id;
	}
	
	public Maniqui() {
		super();
		
	}

	public String getId() {
		return id;
	}

	public void setId(String id) {
		this.id = id;
	}

	public Camisa getCamisa() {
		return camisa;
	}

	public void setCamisa(Camisa camisa) {
		this.camisa = camisa;
	}

	public Pantalon getPantalon() {
		return pantalon;
	}

	public void setPantalon(Pantalon pantalon) {
		this.pantalon = pantalon;
	}

	public Vestido getVestido() {
		return vestido;
	}

	public void setVestido(Vestido vestido) {
		this.vestido = vestido;
	}
	public static void cearManiquis() {
		Maniqui maniqui1 = new Maniqui("1");
		Boton boton1 = new Boton("Plateado", "Circular", 21);
		Boton boton2 = new Boton("Azul", "Circular", 25);
		Boton boton3 = new Boton("Negro", "Cuadrado", 30);
		Boton boton4 = new Boton("Rojo", "Palo", 10);
		Boton[] botones= {boton2, boton3, boton4};
		
		Pantalon pantalon = new Pantalon("M", 25.99, "Azul", boton1);
		Camisa camisa = new Camisa("M", 15.69, "Blanco", botones);
		
		Maniqui maniqui2 = new Maniqui("2");
		Vestido vestido = new Vestido("");
	}
}
